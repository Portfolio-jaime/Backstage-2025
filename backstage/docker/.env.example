# ==============================================
# TECHDOCS (Para documentación)
# ==============================================
TECHDOCS_BUILDER=local
TECHDOCS_GENERATOR=local
TECHDOCS_PUBLISHER=local

# ==============================================
# CATALOG SETTINGS
# ==============================================
CATALOG_PROCESSING_INTERVAL=PT30S

# ==============================================
# MONITORING (Opcional)
# ==============================================
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090